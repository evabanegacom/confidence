<%= simple_form_for(@tweet) do |f| %>
<%= f.error_notification %>
<div class='field'>
  <div class='control'>
    <%= f.input :tweet, label: 'Say Something to Him', input_html: { class: 'textarea' }, wrapper: false, label_html: {class: 'label'}, placeholder: 'birthday wishes', autofocus: true %>
  </div>
</div>
<%= f.button :submit, class: 'button is-info' %>
<% end %>